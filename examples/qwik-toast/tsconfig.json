{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["es2022", "DOM", "WebWorker", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": "tmp",
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"],
      "typique": ["../../index.ts"]
    },
    // Typique
    "plugins": [
      {
        "name": "typique-ts-plugin-dev",
        "generatedNames": {
          "pattern": "${contextName}__${random(4, 3)}",
        }
      }
    ]
  },
  "include": ["src", "./*.d.ts", "./*.config.ts"]
}
